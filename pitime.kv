#:include widgets/calendar.kv
#:import CalendarWidget widgets.calendar.CalendarWidget

#:include widgets/tasks.kv
#:import TasksWidget widgets.tasks.TasksWidget

#:include widgets/clock.kv
#:import ClockWidget widgets.clock.ClockWidget

#:include widgets/carousel.kv
#:import CarouselWidget widgets.carousel.CarouselWidget


<AppWidget>:
    calendar_widget: calendar_widget_id
    carousel_widget_id: carousel_widget_id

    orientation: 'horizontal'
    Slider:
        orientation: 'vertical'
        size_hint: (0.02, 1)
        on_value: root.backlight.brightness = self.value**2 / 100
        min: 10
        max: 100

    CalendarWidget:
        id: calendar_widget_id
        size_hint: (0.373, 1)

    CarouselWidget:
        id: carousel_widget_id
        size_hint: (0.625, 1)

